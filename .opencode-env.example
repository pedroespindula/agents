#!/bin/bash
# OpenCode Configuration Example
# Copy this file to .opencode-env and customize
# Or use: opencode-config init [config-name]

export OPENCODE_AGENTS="core"
export PATH="$PATH:$HOME/agents/specs/$OPENCODE_AGENTS/bin/"
export OPENCODE_CONFIG=$HOME/agents/specs/$OPENCODE_AGENTS/opencode.jsonc
export OPENCODE_CONFIG_DIR=$HOME/agents/specs/$OPENCODE_AGENTS/
