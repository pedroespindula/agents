{
  "$schema": "https://opencode.ai/config.json",
  "instructions": [
    "policies/**/*.md",
    "instructions/AGENTS.md"
  ],
  "default_agent": "plan",
  "mcp": {
    "atlassian": {
      "type": "remote",
      "url": "https://mcp.atlassian.com/v1/mcp",
      "enabled": true
    }
  },
  "provider": {
    "litellm": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "LiteLLM",
      "options": {
        "baseURL": "https://llm-proxy.data.cora.team/"
      },
      "models": {
        "gemini-2.5-pro": {
          "name": "Gemini 2.5 Pro"
        },
        "gpt-4o-mini": {
          "name": "GPT 4o Mini"
        },
        "gemini-2.5-flash": {
          "name": "Gemini 2.5 Flash"
        },
        "gpt-4.1-mini": {
          "name": "GPT 4.1 Mini"
        },
        "gemini-2.0-flash": {
          "name": "Gemini 2.0 Flash"
        },
        "gpt-5-mini": {
          "name": "GPT 5 Mini"
        },
        "gemini-2.0-flash-lite": {
          "name": "Gemini 2.0 Flash Lite"
        },
        "gpt-4.1-nano": {
          "name": "GPT 4.1 Nano"
        },
        "gpt-5": {
          "name": "GPT 5"
        }
      }
    }
  }
}
