{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Workflow",
  "type": "object",
  "required": ["name", "phases"],
  "properties": {
    "name": { "type": "string" },
    "phases": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "tasks"],
        "properties": {
          "name": { "type": "string" },
          "tasks": {
            "type": "array",
            "items": { "type": "string" },
            "minItems": 1
          }
        }
      },
      "minItems": 1
    }
  }
}
